class Solution {
    public Pair<Integer, Integer> getMinMax(int[] arr) {
        // Code Here
        if(arr.length == 1){
            return new Pair<>(arr[0], arr[0]);
        }
        
        int a=arr[0];
        int b=arr[0];
        
        for(int i=1; i<arr.length; i++){
            if(arr[i]<a){
                a=arr[i];
            }
        }
        
        for(int i=1; i<arr.length; i++){
            if(arr[i]>b){
                b=arr[i];
            }
        }
        
        return new Pair<>(a, b);
    }
}
